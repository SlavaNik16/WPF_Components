<Window x:Class="PR17_7_Nikolaev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR17_7_Nikolaev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Введите имя" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30px"/>
        <TextBox  Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300px" Height="20px"/>
        <Button Content="Нажмите" Grid.Row="1" Grid.Column="0"  Width="100px" Height="30px" FontSize="20px"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Резульат" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24px"/>
        <Image Source="" Grid.Row="2" Grid.Column="0"/>
        <Image Source="" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
